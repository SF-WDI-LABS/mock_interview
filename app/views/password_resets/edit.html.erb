<h1>Reset Password</h1>
<hr>
<%= form_for @user, url: password_reset_path(params[:id]) do |f| %>
  <%= f.hidden_field :email %>
  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, placeholder: "Must be at least 6 characters", class: "form-control", autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.label :password_confirmation, "Password Confirmation" %>
    <%= f.password_field :password_confirmation, placeholder: "Confirm password", class: "form-control" %>
  </div>
  <%= f.submit "Update Password", class: "btn btn-block btn-default" %>
<% end %>